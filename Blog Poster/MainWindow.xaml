<Window x:Class="Blog_Poster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blog_Poster"
        mc:Ignorable="d"
        Title="Blog Poster" Height="450" Width="800">
    <Grid>
        <Button x:Name="postButton" Content="Post" HorizontalAlignment="Left" Margin="707,390,0,0" VerticalAlignment="Top" Width="75" Click="Post_Button_Click"/>
        <Label HorizontalAlignment="Left" Margin="307,243,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="bodyText" HorizontalAlignment="Left" Height="369" TextWrapping="Wrap" VerticalAlignment="Top" Width="516" Margin="10,40,0,0" Text="{Binding Message}" AcceptsReturn="True"/>
        <Label Content="Content&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="55" Height="30"/>
        <Label x:Name="postedNoticeLabel" Content="Posted!" Margin="322,193,0,0" Height="60" Width="144" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Window>
