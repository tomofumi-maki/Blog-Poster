<Window x:Class="Blog_Poster.confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blog_Poster"
        mc:Ignorable="d"
        Title="confirmation" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="postingBodyText" FontSize="20" Margin="10,10,251,10" IsReadOnly="True" Text="IsReadOnly" />
        <Label Content="Would you like to post?" HorizontalAlignment="Left" Margin="576,336,0,0" VerticalAlignment="Top" Height="36" Width="206" FontSize="16"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="576,390,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Button_Click"/>
        <Button Content="Post" HorizontalAlignment="Left" Margin="707,390,0,0" VerticalAlignment="Top" Width="75" Click="Posting_Button_Click"/>
    </Grid>
</Window>
